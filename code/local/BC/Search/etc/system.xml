<?xml version="1.0"?>
<config>
    <tabs>
        <bcsearchconfig translate="label" module="mfevent">
            <label>BlueCom Search</label>
            <sort_order>99999</sort_order>
        </bcsearchconfig>
    </tabs>
    <sections>
        <search translate="label" module="search">
            <label>Bluecome Search</label>
            <tab>bcsearchconfig</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <appearance translate="label">
                <label>Appearance Setting</label>
                <sort_order>10</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
                <fields>
                    <show_max_product translate="label">
                        <label>Max result product when search ajax</label>
                        <comment>Number of products to display</comment>
                        <frontend_type>text</frontend_type>
                        <sort_order>4</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <can_be_empty>1</can_be_empty>
                    </show_max_product>
                    <item_template translate="label">
                        <label>Search result item template</label>
                        <frontend_type>textarea</frontend_type>
                        <sort_order>40</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                    </item_template>
                    <show_buttion_all translate="label">
                        <label>Show Button All Result?</label>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                        <sort_order>40</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                    </show_buttion_all>
                    <thumbnail_size>
                        <label>Thumbnail width (px)</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>40</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                    </thumbnail_size>
                    <preloader_image translate="label">
                        <label>Preloader image</label>
                        <frontend_type>image</frontend_type>
                        <backend_model>adminhtml/system_config_backend_image</backend_model>
                        <upload_dir config="system/filesystem/media" scope_info="1">bc_search</upload_dir>
                        <base_url type="media" scope_info="1">bc_search</base_url>
                        <sort_order>80</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                    </preloader_image>
                </fields>
                </appearance >
            </groups>
        </search>
    </sections>
</config>